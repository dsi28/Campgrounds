<% include ../partials/header.ejs %>
<div class='container'>
    <header class='jumbotron'>
        <div class='container'>
            <h1>Welcome to YELP CAMP!</h1>
            <p>View all of our amazing camps sites!</p>
            <p>
                <a class='btn btn-primary btn-lg' href='/campgrounds/new'>Add New CAMP site</a>
            </p>
            <p>
                <form class='form-inline' method='GET' action='/campgrounds'>
                    <div class='form-group'>
                        <input class='form-control' name='search' type='text' placeholder='Campground Search'>
                        <input class='btn btn-primary' type='submit' value='Search'>
                    </div>                
                </form>
            </p>
        </div>
    </header>

    <div class='row'>
        <% campSites.forEach((c)=>{%>
            <div class='col-md-3 col-sm-6'>
                <div class='img-thumbnail'>
                    <img  class='img-fluid' src='<%= c.image %>'>
                    <div class='caption'>
                        <h4><%= c.name %></h4>
                    </div>
                    <p><a href='/campgrounds/<%= c._id %>' class='btn btn-primary'>More Info</a><p>
                </div>            
            </div>
        <%})%>
    </div>

   
</div>
<% include ../partials/footer.ejs %>